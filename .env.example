# LearnFun SL Environment Variables
# Copy this file to .env.local for local development and fill in the values.
# For production, set these variables in your Vercel project settings.

# Supabase
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY= # For backend/admin operations only, keep secure

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Google Gemini AI Services
# For API key rotation, you can define multiple keys
GEMINI_API_KEY_1=
GEMINI_API_KEY_2=
# Or a single key if rotation is handled differently
# GEMINI_API_KEY=

# Pinecone Vector Database
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME= # e.g., learnfun-sl-content

# Google Drive (Optional, if used for specific file storage)
GOOGLE_DRIVE_API_KEY= # If using API key access
GOOGLE_DRIVE_FOLDER_ID= # Relevant folder ID

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com # Or your self-hosted instance

# Application Specific
NEXT_PUBLIC_APP_URL=http://localhost:3000 # Change for production (e.g., https://yourdomain.com)
NODE_ENV=development # Will be 'production' on Vercel automatically
